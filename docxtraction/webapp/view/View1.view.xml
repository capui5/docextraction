    <SplitApp id="SplitAppDemo">
        <masterPages>
            <Page
                id="master"
                title="Upload File"
            >
                <l:VerticalLayout
                    id="layout_uploader"
                    class="sapUiMediumMargin"
                >
                
                    <u:FileUploader
                        id="fileUploader"
                        tooltip="Upload your file to Document Infromation Extraction"
                        change="onFileChange"
                    />
                    <Button
                        text="Upload File"
                        press="handleUploadPress"
                        enabled="{viewModel>/uploadEnabled}"
                    />
                    <List
                        updateFinished="UpdateList"
                        selectionChange ="OnSelectionChange"
                        id="ProductList"
                        items="{ListModel>/results}"
                        mode="SingleSelect"
                        includeItemInSelection="true"
                    >
                        <StandardListItem
                            title="{ListModel>fileName}"
                            description="{ListModel>status}"
                            iconDensityAware="false"
                            iconInset="false"
                         
                        />
                    </List>
                </l:VerticalLayout>
            </Page>
        </masterPages>
        <detailPages>
            <core:Fragment
                fragmentName="com.docxtraction.docxtraction.fragment.ObjectPage"
                type="XML"
            />
        </detailPages>
    </SplitApp>
